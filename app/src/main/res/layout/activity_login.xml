<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kevin.tohelp.Login"
    android:weightSum="1"
    android:background="#fc3f19"
    android:id="@+id/test">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:layout_gravity="center"
        android:background="#fc3f19"
        android:id="@+id/relativeLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/loginSenha"
            android:layout_below="@+id/loginUsuario"
            android:hint="Senha"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Entrar"
            android:id="@+id/btnLogin"
            android:onClick="fazerLogin"
            android:background="#afcecece"
            android:textColor="#000000"
            android:layout_below="@+id/loginSenha"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp" />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/loginUsuario"
            android:layout_alignParentTop="true"
            android:layout_marginTop="27dp"
            android:hint="Login"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Inscreva-se"
        android:onClick="telaCadastro"
        android:id="@+id/btnCadastro"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/bbto"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:background="#fc3f19" />
</RelativeLayout>
